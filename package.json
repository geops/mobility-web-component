{
  "name": "mobility-web-component",
  "license": "UNLICENSED",
  "description": "Web components in the domains of mobility and logistics.",
  "version": "0.0.1-beta.3",
  "homepage": "https://mobility-web-component.geops.io/",
  "dependencies": {
    "maplibre-gl": "^3.5.0",
    "mobility-toolbox-js": "^2.2.0",
    "ol": "^8.1.0",
    "preact": "^10.18.1",
    "preact-custom-element": "^4.3.0",
    "rosetta": "^1.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "concurrently": "^8.2.1",
    "esbuild": "^0.19.5",
    "esbuild-sass-plugin": "^2.16.0",
    "fixpack": "^4.0.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.3",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.3.3"
  },
  "scripts": {
    "build": "yarn build:css && yarn build:js",
    "build:css": "yarn tailwind:component && yarn tailwind:website",
    "build:js": "node scripts/build.mjs",
    "dev": "node scripts/dev.mjs",
    "format": "prettier --write 'src/**/*.tsx'",
    "prepare": "husky install",
    "publish:beta": "HUSKY=0 yarn release -- --prerelease beta --skip.changelog && git push origin HEAD && yarn run build && HUSKY=0 yarn publish --tag beta && git push --tags ",
    "publish:beta:dryrun": "yarn release -- --prerelease beta --dry-run --skip.changelog",
    "release": "standard-version",
    "start": "concurrently \"yarn tailwind:component --watch\" \"yarn tailwind:website --watch\" \"yarn dev\"",
    "tailwind:component": "tailwindcss --output=src/style.css --content=src/**/*.tsx",
    "tailwind:website": "tailwindcss --output=output.css --content=index.html --minify",
    "up": "yarn upgrade-interactive --latest"
  },
  "type": "module"
}
